<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/btn_src_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
       
        android:text="Search and Connect" />

    <Button
        android:id="@+id/btn_auto_connect_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_src_connect"
        android:layout_alignRight="@+id/btn_src_connect"
        android:layout_below="@+id/btn_src_connect"
        android:layout_marginTop="26dp"
        android:visibility="gone"
        android:text="Auto Connection Settings" />

    <Button
        android:id="@+id/btn_printer_setup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_auto_connect_setting"
        android:layout_alignRight="@+id/btn_auto_connect_setting"
        android:layout_below="@+id/btn_auto_connect_setting"
        android:layout_marginTop="25dp"
        android:visibility="gone"
        android:text="Printer Setup" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_printer_setup"
        android:layout_alignRight="@+id/btn_printer_setup"
        android:layout_below="@+id/btn_printer_setup"
        android:layout_marginTop="44dp"
        android:visibility="gone"
        android:text="Back" />

</RelativeLayout>
